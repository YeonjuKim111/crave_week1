<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="0dip">

        <ImageButton
            android:id="@+id/ibZoomin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/zoom_in" />
        <ImageButton
            android:id="@+id/ibZoomOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/zoom_out" />
        <ImageButton
            android:id="@+id/ibRotate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/rotate" />
        <ImageButton
            android:id="@+id/ibBright"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bright" />
        <ImageButton
            android:id="@+id/ibDark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/dark" />
        <ImageButton
            android:id="@+id/ibBlur"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/blur" />
        <ImageButton
            android:id="@+id/ibEmbo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/embo" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pictureLayout"
        android:layout_weight="9"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="0dip">

    </LinearLayout>

</LinearLayout>